<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/search_styles"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/submit_imgCover"
        android:layout_width="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:layout_height="90dp"
        android:src="@drawable/cancel"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/submit_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:text="Nike SB Dunk Low“Night of Mischief”万圣节"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/submit_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="44.5码"/>
            <TextView
                android:id="@+id/submit_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="数量x1"/>
            <TextView
                android:id="@+id/submit_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|right"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:text="￥1659"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>