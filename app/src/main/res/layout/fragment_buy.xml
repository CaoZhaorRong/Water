<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#cccccc"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_buy_back"
            android:layout_width="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/back"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fragment_buy_collect"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/star_off" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/activity_pager"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="250dp" />
                        <com.youth.banner.Banner
                            android:id="@+id/fragment_buy_banner"
                            android:layout_width="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_height="400dp"/>
                        <TextView
                            android:id="@+id/fragment_buy_name"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/fragment_buy_price"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:layout_height="35dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:text="选择尺码"
                            android:layout_height="50dp"/>
                        <TextView
                            android:id="@+id/fragment_buy_select"
                            android:layout_width="0dp"
                            android:gravity="center|end"

                            android:layout_weight="1"
                            android:text="请选择尺码"
                            android:layout_height="50dp"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:src="@drawable/right"
                            android:layout_marginEnd="10dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:gravity="center_vertical"
                                android:text="配    色"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center|end"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:text="银"
                                android:layout_height="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:gravity="center_vertical"
                                android:text="货   号"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center|end"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:text="ZBT-1-30-b"
                                android:layout_height="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:gravity="center_vertical"
                                android:text="发售价格"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center|end"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:text="￥128 仅供参考"
                                android:layout_height="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:gravity="center_vertical"
                                android:text="发售日期"
                                android:layout_height="20dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:gravity="center|end"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:text="2019秋季"
                                android:layout_height="20dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:background="@color/white"
                        android:text="    评价"/>
                    <net.lzzy.water.utils.MyListView
                        android:id="@+id/fragment_buy_lv"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/fragment_buy_shopping"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="@drawable/btn_style_3"
                android:layout_weight="1"
                android:text="立即购买"
                android:layout_height="40dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

