<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shop_imgCover"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/shop_price"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:text="￥299"/>
            <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#000000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/shop_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="╳"
            android:background="@drawable/tv_circle_style"/>
        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginTop="5dp"
    android:text="颜色"
    android:textColor="@color/colorBlack"
    android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
       <GridView
           android:id="@+id/shop_view_gvColor"
           android:layout_width="match_parent"
           android:visibility="gone"
           android:gravity="center_vertical"
           android:layout_height="wrap_content"/>

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:text="尺码"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <GridView
            android:id="@+id/shop_view_gvYardage"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="@color/colorBlack"
            android:text="购买数量"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shop_count_lessen"
            android:layout_width="30dp"
            android:background="@color/colorWhite"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_height="30dp"
            android:text="－"/>
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/shop_view_count"
            android:layout_width="30dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="1"
            android:layout_height="30dp"/>
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/shop_count_add"
            android:layout_width="30dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:layout_height="30dp"
            android:text="＋"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/shop_now"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/btn_style"
                android:text="立即购买"/>

            <TextView
                android:id="@+id/shop_addCart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:background="@drawable/btn_style_2"
                android:textColor="@color/white"
                android:text="加入购物车"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>